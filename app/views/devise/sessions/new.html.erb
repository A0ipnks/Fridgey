<div class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
      <!-- ヘッダー -->
      <div class="text-center mb-8">
        <div class="mb-4">
          <img src="/logo.svg" alt="Fridgey Logo" class="w-16 h-16 mx-auto">
        </div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Fridgey</h1>
        <h2 class="text-xl font-semibold text-gray-700 mb-2">ログイン</h2>
        <p class="text-sm text-gray-600">
          Fridgey(フリッジー)にお帰りなさい
        </p>
      </div>

      <!-- フォーム -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "あなたのメールアドレス",
              class: "w-full px-3 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password",
                              placeholder: "パスワード",
                              class: "w-full px-3 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "ログイン状態を保持する",
                class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= f.submit "ログイン",
              class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors font-medium" %>
        </div>
      <% end %>

      <!-- リンク -->
      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
