<div class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md px-8 py-8">
      <!-- ヘッダー -->
      <div class="text-center mb-8">
        <div class="mb-4">
          <img src="/logo.png" alt="Fridgey Logo" class="w-12 h-12 mx-auto object-contain">
        </div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Fridgey</h1>
        <h2 class="text-xl font-semibold text-gray-700 mb-2">パスワードをお忘れですか？</h2>
        <p class="text-sm text-gray-600">
          パスワード再設定の手順をメールでお送りします
        </p>
      </div>

      <!-- エラーメッセージ -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- フォーム -->
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "登録したメールアドレス",
              class: "w-full px-3 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="pt-4">
          <%= f.submit "パスワード再設定メールを送信",
              class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors font-medium" %>
        </div>
      <% end %>

      <!-- リンク -->
      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
