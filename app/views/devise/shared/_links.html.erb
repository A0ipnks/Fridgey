<div class="text-center space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name),
        class: "inline-block w-full px-4 py-2 text-center text-blue-600 hover:text-blue-800 border border-blue-600 hover:border-blue-800 rounded-md font-medium transition-colors" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規アカウント作成", new_registration_path(resource_name),
        class: "inline-block w-full px-4 py-2 text-center text-green-600 hover:text-green-800 border border-green-600 hover:border-green-800 rounded-md font-medium transition-colors" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れた方", new_password_path(resource_name),
        class: "inline-block text-gray-600 hover:text-gray-800 text-sm underline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届かない方", new_confirmation_path(resource_name),
        class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除", new_unlock_path(resource_name),
        class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider),
          data: { turbo: false },
          class: "w-full mt-4 py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  <% end %>
</div>
