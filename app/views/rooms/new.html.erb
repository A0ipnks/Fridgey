<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">新しい冷蔵庫を作成</h1>

  <%= form_with model: @room, local: true, class: "space-y-6" do |form| %>
    <% if @room.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h4 class="font-semibold mb-2"><%= pluralize(@room.errors.count, "個") %>のエラーがあります:</h4>
        <ul class="list-disc list-inside">
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "冷蔵庫名", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "例: 田中家の冷蔵庫" %>
    </div>

    <div>
      <%= form.label :description, "説明（任意）", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "この冷蔵庫の説明を入力してください..." %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "作成する", class: "bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors" %>
      <%= link_to "キャンセル", rooms_path, class: "bg-gray-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-600 transition-colors" %>
    </div>
  <% end %>
</div>
